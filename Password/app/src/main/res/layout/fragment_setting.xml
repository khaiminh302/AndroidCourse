<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".View.Setting">

        <ImageView
            android:id="@+id/imv_setting_avt"
            android:layout_width="70dp"
            android:layout_height="70dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:src="@drawable/maintenance"
            android:layout_marginTop="50dp"/>

        <TextView
            android:id="@+id/tv_change_master_key"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            app:layout_constraintTop_toBottomOf="@id/imv_setting_avt"
            android:layout_marginTop="150dp"
            android:text="Change Master Key (PIN)"
            android:padding="18dp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:background="@drawable/gray_txt_contain"/>
        
        <TextView
            android:id="@+id/tv_check_security"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            app:layout_constraintTop_toBottomOf="@id/imv_setting_avt"
            android:layout_marginTop="208dp"
            android:text="Check security password mode "
            android:padding="18dp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:background="@drawable/gray_txt_contain"/>

        <Button
            android:id="@+id/btn_delete_list"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/imv_setting_avt"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginTop="354dp"
            android:text="Delete All The Account "
            android:padding="18dp" />

        <Switch
            android:id="@+id/switch_security_mode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="344dp"
            android:layout_marginEnd="36dp"
            android:minWidth="48dp"
            android:minHeight="48dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>