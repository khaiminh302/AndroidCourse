<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".View.Password.EditPassword"
        android:background="#46FFFFFF">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/siv_account_logo"
            android:layout_width="80dp"
            android:layout_height="80dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="100dp"

            app:shapeAppearance="@style/round"/>

        <EditText
            android:id="@+id/edt_note"
            android:layout_width="270dp"
            android:layout_height="50dp"
            android:layout_marginTop="60dp"
            android:background="@drawable/edit_container"
            android:gravity="center"
            android:inputType="textShortMessage"
            android:padding="12dp"
            android:text="Your Note Here"
            android:textColor="@color/black"
            android:textSize="20dp"
            app:layout_constraintLeft_toLeftOf="@id/siv_account_logo"
            app:layout_constraintRight_toRightOf="@id/siv_account_logo"
            app:layout_constraintTop_toBottomOf="@id/siv_account_logo" />

        <EditText
            android:id="@+id/edt_email"
            android:layout_width="270dp"
            android:layout_height="50dp"
            android:layout_marginTop="150dp"
            android:background="@drawable/edit_container"
            android:gravity="center"
            android:inputType="textShortMessage"
            android:padding="12dp"
            android:text="Your Email Here"
            android:textColor="@color/black"
            android:textSize="20dp"
            app:layout_constraintLeft_toLeftOf="@id/siv_account_logo"
            app:layout_constraintRight_toRightOf="@id/siv_account_logo"
            app:layout_constraintTop_toBottomOf="@id/siv_account_logo" />

        <EditText
            android:id="@+id/edt_password"
            android:layout_width="270dp"
            android:layout_height="50dp"
            android:layout_marginTop="240dp"
            android:background="@drawable/edit_container"
            android:gravity="center"
            android:inputType="textShortMessage"
            android:padding="12dp"
            android:text="Your Password Here"
            android:textColor="@color/black"
            android:textSize="20dp"
            app:layout_constraintLeft_toLeftOf="@id/siv_account_logo"
            app:layout_constraintRight_toRightOf="@id/siv_account_logo"
            app:layout_constraintTop_toBottomOf="@id/siv_account_logo" />

        <Button
            android:id="@+id/btn_save_edit"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_marginTop="45dp"
            android:layout_marginRight="15dp"
            android:text="Save"
            app:cornerRadius="50sp"
            app:layout_constraintRight_toRightOf="@id/edt_password"
            app:layout_constraintTop_toBottomOf="@id/edt_password" />

        <Button
            android:id="@+id/btn_delete"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_marginStart="15dp"
            android:text="Delete"
            app:cornerRadius="50sp"
            app:layout_constraintStart_toStartOf="@+id/edt_password"
            app:layout_constraintTop_toTopOf="@id/btn_save_edit" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>