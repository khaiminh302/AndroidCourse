<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/onboarding_1_background"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scaleType="centerInside"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/onboarding_1_bg" />

    <ImageView
        android:id="@+id/image_swipe_dot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="280dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/swipe_dot" />

    <TextView
        android:id="@+id/big_message_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:fontFamily="sans-serif-medium"
        android:text="@string/big_message_1_text"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="32sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/image_swipe_dot" />

    <TextView
        android:id="@+id/small_message_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="@string/small_message_onboarding_text"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="@+id/big_message_1"
        app:layout_constraintStart_toStartOf="@+id/big_message_1"
        app:layout_constraintTop_toBottomOf="@+id/big_message_1" />

    <ImageButton
        android:id="@+id/next_button_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:backgroundTint="#00FFFFFF"
        android:contentDescription="next button"
        app:layout_constraintEnd_toEndOf="@+id/small_message_1"
        app:layout_constraintStart_toStartOf="@+id/small_message_1"
        app:layout_constraintTop_toBottomOf="@+id/small_message_1"
        app:srcCompat="@drawable/next_round_button" />

</androidx.constraintlayout.widget.ConstraintLayout>